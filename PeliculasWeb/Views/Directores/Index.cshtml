@model IEnumerable<PeliculasWeb.Models.Director>

@{
    ViewData["Title"] = "Index";
}

<h1>Directores</h1>

<p>
    <a asp-action="Create">Nuevo Director</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PremiosGanados)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PremiosGanados)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DirectorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DirectorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DirectorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
